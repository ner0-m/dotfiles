{
    "coc.preferences.diagnostic.refreshOnInsertMode": false,
    "clangd.semanticHighlighting": true, 
    "clang.arguments": ["-c++"], 
    "languageserver": {
        "cmake": {
            "command": "cmake-language-server",
            "filetypes": ["cmake"],
            "rootPatterns": ["build/"],
            "initializationOptions": {
                "buildDirectory": "build"
            }
        } 
    },
    "coc.preferences.colorSupport": true 
}
